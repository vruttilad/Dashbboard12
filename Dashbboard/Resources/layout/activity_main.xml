<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Dashboard"
        android:id="@+id/textViewDashboard"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"/>
        
        
     <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp" 
            app:cardCornerRadius="10dp">
            
            
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/google"/>
        
     </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:id="@+id/cardView1"
           app:layout_constraintTop_toTopOf="@+id/textViewDashboard"
           android:layout_marginTop="80dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:backgroundTint="#2c62ff"
           app:cardCornerRadius="17dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January"
            android:textColor="#cbd8ff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 500"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/statistics"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:tint="#ffffff"/>

       <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:progress="70"
            android:max="100"
            android:progressTint="@android:color/white"
            android:progressBackgroundTint="#ffffff"
            android:scrollbarSize="100dp"
            android:visibility="visible" 
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70%"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="88dp"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily spend target:$16.67"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="115dp"
            android:textSize="15dp"/>
            
    </androidx.cardview.widget.CardView>

      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY SPENDS"
            android:layout_marginLeft="20dp"
            android:textColor="#bdbdbe"
            android:textStyle="bold"
            android:id="@+id/textViewDailySpend"
            app:layout_constraintTop_toBottomOf="@+id/cardView1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"/>

      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"
            android:textColor="#3669ff"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/cardView1"
            android:layout_marginTop="35dp"/>

    <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="230dp"
           android:id="@+id/cardView2"
           android:layout_marginTop="334dp"
           app:layout_constraintTop_toTopOf="parent"
           android:backgroundTint="#ffffff"
           app:cardCornerRadius="17dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#ff5e5b">
            
            
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8.5dp"
            android:layout_marginTop="8.5dp"
            android:src="@drawable/netbanking"/>
        
        </androidx.cardview.widget.CardView>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Banking"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$365.89"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="80dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#a9bed7"
            android:layout_marginTop="30dp"
            android:textSize="15dp"/>

         <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#fbb41a">
            
            
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8.5dp"
            android:layout_marginTop="8.5dp"
            android:src="@drawable/food"/>
        
         </androidx.cardview.widget.CardView> 

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food & Drinks"
            android:textColor="#000000"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="80dp"
            />
         
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$165.99"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="113dp"
            android:layout_marginLeft="80dp"
            />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Jan,2019"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#a9bed7"
            android:layout_marginTop="100dp"
            android:textSize="15dp"/>

         <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#2bc999">
            
            
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="7.5dp"
            android:layout_marginTop="7.5dp"
            android:src="@drawable/cloth"/>

         </androidx.cardview.widget.CardView>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothes"
            android:textColor="#000000"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="80dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$65.09"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="183dp"
            android:layout_marginLeft="80dp"
            />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Jan,2019"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#a9bed7"
            android:layout_marginTop="170dp"
            android:textSize="15dp"/>

    </androidx.cardview.widget.CardView>

       

     
          
     
    



 
</androidx.constraintlayout.widget.ConstraintLayout>